---
import type { GetStaticPaths } from "astro";
import BasicLayout from "../../layout/BasicLayout.astro";
import LibraryBook from "../../components/LibraryBook.astro";
import { getCollection } from "astro:content";
export const getStaticPaths = (async ({paginate}) => {
    const books = await getCollection("books")
   // const booksSorted = books.sort((a,b) => a.data.title - b.data.title)
    return paginate(books, {pageSize: 4})
}) satisfies GetStaticPaths;
const {page} = Astro.props
---
<BasicLayout title="Bibliotek">
    <main> 
        <section class="h-full w-full bg-white">
            <h1 transition:name="heading" class="text-4xl text-center">Bibliotek</h1>
            <div class="md:p-12 p-4 flex flex-col justify-center items-center gap-6 bg-white w-full">
                {page.data.map((book)=>(
                    <div class="rounded-mx flex md:flex-row flex-col gap-4 px-4 py-1 max-w-3xl">
                        <img transition:name={`image-${book.slug}`} class="bg-slate-50 md:w-28" src={book.data.image}/>
                        <div class="flex flex-col">
                            <h1 transition:name={`title-${book.slug}`} class="text-3xl hover:text-slate-700"><a href={`/library/${book.slug}`}>{book.data.title}</a></h1>
                            <h5 class="text-sm text-slate-500 mt-1 hover:underline"><a href={`/authors/${book.data.author.slug}`}>Test</a></h5>
                            <p class="line-clamp-4 text-md ">{book.data.excerpt}</p>
                        </div>
                    </div>
                    <!--<LibraryBook slug={book.slug} title={book.data.title} image={book.data.image} author={book.data.author} pages={book.data.pages} excerpt={book.data.excerpt}></LibraryBook>-->
                    ))}
                <nav class="p-4 flex flex-row items-center max-w-3xl mx-auto">
                    {page.url.prev ? <a class="block text-black p-2 rounded-lg underline underline-offset-3" href={page.url.prev}>Previous page</a> : null}
                    {page.url.next ? <a class="block text-black p-2 rounded-lg underline underline-offset-3" href={page.url.next}>Next page</a> : null} 
                </nav>
            </div>
        </section>
    </main>
</BasicLayout>