---
const {title, excerpt, image, authorSlug, author, slug} = Astro.props
const month = ["januari","februari","mars","april","maj","juni","juli","augusti","september","oktober","november","december"];
const d = new Date();
let name = month[d.getMonth()];
---
<div class="bg-stone-100 p-4 ">
    <h3 class="text-xl font-bold md:text-left text-center md:mb-0 mb-2"> Rekommenderad bok {name} 2023</h3>
    <div>
        <div class="flex md:flex-row flex-col gap-4 md:p-4 rounded-lg">
            <div class=" md:mx-0">
                <img transition:name={`image-${slug}`} class="bg-white w-full" src={image}/>
            </div>
            <div class="flex flex-col justify-center md:w-96">
                <h3 transition:name={`title-${slug}`} class="text-2xl hover:text-slate-700"><a href={`/library/${slug}`}>{title}</a></h3>
                <h5 class="text-sm text-slate-500 hover:underline"><a href={`/authors/${authorSlug.slug}`}>{author}</a></h5>
                <p class="line-clamp-6">{excerpt}</p>
            </div>
        </div>
    </div>
</div>