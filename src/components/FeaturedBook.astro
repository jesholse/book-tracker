---
import { getEntry } from "astro:content";
const {title, excerpt, image, author, slug} = Astro.props
const getAuthor = await getEntry("authors", author.slug)
console.log(getAuthor)
---
<div class="bg-blue-100 p-4 rounded-lg">
    <h3 class="text-xl font-bold md:text-left text-center md:mb-0 mb-2"> Rekommenderad bok november 2023</h3>
    <div>
        <div class="flex md:flex-row flex-col gap-4 md:p-4 rounded-lg">
            <div class="md:w-1/4">
                <img class="bg-white w-full" src={image}/>
            </div>
            <div class="flex flex-col justify-center md:w-96">
                <h3 class="text-xl hover:text-slate-700"><a href={`/library/${slug}`}>{title}</a></h3>
                <h5 class="text-sm text-slate-500 hover:underline"><a href={`/authors/${author.slug}`}>{getAuthor?.data.name}</a></h5>
                <p class="md:line-clamp-3 line-clamp-6">{excerpt}</p>
            </div>
        </div>
    </div>
</div>