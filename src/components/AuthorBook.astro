    <img class="bg-slate-50 md:w-28" src={image}/>
    <div class="">
        <h3 class="text-3xl"><a href={`/library/${slug}`}>{title}</a></h3>
        <p class="line-clamp-4 text-md ">{excerpt}</p>
    </div>
</div>