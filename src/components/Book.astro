---
import { getEntry } from "astro:content";
const {title, excerpt, image, author, slug} = Astro.props
const getAuthor = await getEntry("authors", author.slug)
---

<div class="p-4">
    <div class="flex flex-row gap-4 rounded-lg">
        <div class="w-1/4">
            <img class="bg-white" src={image}/>
        </div>
        <div class="flex flex-col justify-center w-3/4 max-w">
            <h3 class="text-3xl">{title}</h3>
            <h5 class="text-sm text-slate-500 underline"><a href={`/authors/${author.slug}`}>{getAuthor?.data.name}</a></h5>
            <p class="max-w-2xl line-clamp-5">{excerpt}</p>
            <a href={`/library/${slug}`} class="text-slate-700 border-b-2 border-slate-500 p-1 w-fit">Read more</a>
        </div>
    </div>	
</div>